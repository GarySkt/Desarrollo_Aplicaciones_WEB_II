@model EjercicioPropuestos_MVC_CALLE.Models.ClsFigura
@{
    ViewBag.Title = "Index";
}

<h2>Generar Figura</h2>
@using (Html.BeginForm("Index", "Figura", FormMethod.Post))
{
    <p>
        @Html.LabelFor(model => model.caracter, "Caracter: ")
        @Html.EditorFor(model => model.caracter)
    </p>
    <p>
        @Html.LabelFor(model => model.nro_filas, "Cantidad de filas: ")
        @Html.EditorFor(model => model.nro_filas)
    </p>
    <div>

        

        @Html.RadioButtonFor(model => model.alineacion, "1")   <span class="glyphicon glyphicon-align-left"></span><br />

        @Html.RadioButtonFor(model => model.alineacion, "2")   <span class="glyphicon glyphicon-align-center"></span><br />
        @Html.RadioButtonFor(model => model.alineacion, "3")   <span class="glyphicon glyphicon-align-right"></span><br />
    </div>

    <input type="submit" value="Generar" />
    <br />
    <br />
    <br />
    if (Session["i"] == null)
    {
        Session["i"] = 1;
    }
    else
    {
        int cont = Convert.ToInt32(Session["i"]);
        Session["i"] = cont++;
        <div style="line-height: 0px">
            @for (int i = 0; i < Model.nro_filas; i++)
            {
                <pre style="margin-top:inherit">@Model.figura[i].ToString()</pre><br />
            }
        </div>
    }
}


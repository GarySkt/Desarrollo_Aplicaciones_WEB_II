@model Laboratorio06_MVC_CALLE.Models.ClsFactura
@{
    ViewBag.Title = "Index";
}

<h2>Bodega de Don Pedrito</h2>

<h3>Ingresar Producto</h3>

<div class="container">
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            @using (Html.BeginForm("Index", "Factura", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.nombre_producto, "Producto: ")
                    @Html.TextBoxFor(model => model.nombre_producto, new { @class = "form-control" })

                    @Html.LabelFor(model => model.cant_producto, "Cantidad: ")
                    @Html.TextBoxFor(model => model.cant_producto, new { @class = "form-control" })

                    @Html.LabelFor(model => model.precio_unit, "Precio Unitario: ")
                    @Html.TextBoxFor(model => model.precio_unit, new { @class = "form-control" })
                </div>
                    <br />
                    <button class="btn btn-primary">Calcular</button>
            }
        </div>
        <div class="col-lg-4"></div>
    </div>
</div>
<div class="form-group">
    @Html.TextAreaFor(model => ViewData["Resultado"], new
{
    rows = "10",
    cols = "30"
})

</div>





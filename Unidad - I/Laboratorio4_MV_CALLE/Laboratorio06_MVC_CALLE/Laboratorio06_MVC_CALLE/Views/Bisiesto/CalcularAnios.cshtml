
@{
    ViewBag.Title = "CalcularAnios";
}

<h2>CalcularAnios</h2>

@{
    Model.Bisiesto = "";
    Model.NoBisiesto = "";
    Model.Resultado = "";

    for (int i = Model.Inicial; i <= Model.Final; i++)
    {
        Model.Todo += i + ", ";
        if (i % 400 == 0)
        {
            Model.Bisiesto = Model.Bisiesto + i + "\n";

        }
        else if (i % 4 == 0 && i % 100 != 0)
        {
            Model.Bisiesto += i + "\n";
        }
        else { Model.NoBisiesto += i + "\n"; }

    }
    if (Request["Anio"] == "Mostrar Bisiestos")
    {
        Model.Resultado = Model.Bisiesto;
    }
    if (Request["Anio"] == "Mostrar NO bisiesto")
    {
        Model.Resultado = Model.NoBisiesto;
    }
    if (Request["Anio"] == "Mostrar Todos")
    {
        Model.Resultado = Model.Todo;
    }
}

<h2><strong>@Request["Anio"]</strong></h2>
<div class="alert alert-info">
    <strong>@Model.Resultado</strong>
</div>
<a class="btn btn-info" href="javascript:history.back()">Regresar</a>

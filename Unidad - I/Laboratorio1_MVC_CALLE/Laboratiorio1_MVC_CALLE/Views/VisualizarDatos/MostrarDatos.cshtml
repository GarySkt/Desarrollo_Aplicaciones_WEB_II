
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MostrarDatos</title>
</head>
<body>
    <div>
        <b>Curso:</b>@ViewBag.Curso <br />
        <b>Apellidos y Nombres: </b>@ViewBag.Nombre <br />
        <b>Escuela: </b>@ViewData["Carrera"] <br />
        <b>Fecha y Hora: </b>@ViewData["FechaHora"] <br />

        <br />

        <input type="type" name="name" value="@ViewBag.Nombre" size="50" />
        <br />

        @Html.TextBox("Nombre: ",(String)ViewBag.Nombre)
        @Html.TextBox("Escuela: ",ViewData["Carrera"])
    </div>
</body>
</html>
